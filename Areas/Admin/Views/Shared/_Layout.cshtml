                            </ul>
                        </li>

                        @*<li>@Html.ActionLink("البحث", "Index", "Search")</li>*@

                    }

                </ul>
                @if (User.Identity.IsAuthenticated)
                {
                    <ul class="nav navbar-nav" style="float:left">
                        <li>@Html.ActionLink("تسجيل خروج ( " + User.Identity.Name + " )", "Logout", "Account")</li>
                    </ul>
                }
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        @*<footer>
            <p>&copy; @DateTime.Now.Year - Eagle</p>
        </footer>*@
    </div>


    @RenderSection("scripts", required: false)
</body>
</html>
