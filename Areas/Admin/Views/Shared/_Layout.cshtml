    <title>SMG لوحة التحكم - @ViewBag.title </title>
    @*@Styles.Render("~/Content/css")*@
    <link rel="icon" href="~/logo.ico" type="image/x-icon">
    <link href="~/template/css/Site.css" rel="stylesheet" />
    <link href="~/template/css/bootstrap7-rtl.min.css" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="~/template/css/font-awesome.min.css">
    <link rel='stylesheet' href='~/template/css/kendo/kendo.rtl.min.css' />

    <link href="~/template/css/kendo/kendo.bootstrap.min.css" rel="stylesheet" />
    <link href="~/template/css/kendo/kendo.common-bootstrap.min.css" rel="stylesheet" />





    @*@Scripts.Render("~/bundles/jquery")*@
