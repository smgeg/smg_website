                                <div class="divider"></div>
                                <li>@Html.ActionLink("Banner الشاشة الرئيسية", "Index", "Banners", new { area = "admin" }, null)</li>
                                <li>@Html.ActionLink("معرض الصور", "Index", "Galleries", new { area = "admin" }, null)</li>
                                <div class="divider"></div>
                                <li>@Html.ActionLink("الاخبار", "Index", "Blogs", new { area = "admin" }, null)</li>
                                <div class="divider"></div>
                                <li>@Html.ActionLink("الوظائف", "Index", "Jobs", new { area = "admin" }, null)</li>
                                <li>@Html.ActionLink("المتقدمين للوظائف", "Index", "JobUsers", new { area = "admin" }, null)</li>
