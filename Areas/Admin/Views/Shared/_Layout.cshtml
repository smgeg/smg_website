    @*@Scripts.Render("~/bundles/bootstrap")*@

    <script src="~/template/js/kendo/kendo.all.min.js"></script>
    <script src="~/template/js/kendo/kendo.aspnetmvc.min.js"></script>
    <script src="~/template/js/kendo/jszip.min.js"></script>

    <script src="~/template/js/bootstrap.min.js"></script>

    <script>
        $(function () {
            kendo.cultures.current.calendar.patterns.d = "dd-MM-yyyy";
            kendo.cultures.current.calendar.patterns.G = "dd-MM-yyyy h:mm:ss tt";
        });
    </script>
    @*@Scripts.Render("~/bundles/modernizr")*@
</head>
